<div id="loginModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog ">
  <div class="modal-content col-md-6 col-md-offset-3">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="login_close"><span class="glyphicon glyphicon-remove-sign"></span></button>
          <h1 class="text-center">Login</h1>
      </div>
      <div class="modal-body ">
          <form class="form" method="post" action="login">
            <div class="form-group">
              <input type="email" name="email" class="form-control" placeholder="Email" required="required">
            </div>
            <div class="form-group">
              <input type="password" name="password" class="form-control" placeholder="Password" required="required">
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-info center-block" value ="Sign In" /> 
            </div>
            
          </form>
      </div>
      
      </div>
  </div>
  </div>